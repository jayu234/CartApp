{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "__test__"]
}